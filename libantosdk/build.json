{
    "targets":{
        "clean": {
            "jobs": [
                {
                    "name": "vfs-rm",
                    "data": ["build"]
                }
            ]
        },
        "locale": {
            "require": ["locale"],
            "jobs": [
                {
                    "name":"locale-gen",
                    "data": {
                        "src": "",
                        "exclude": ["build/debug/", "core/"],
                        "locale": "en_GB",
                        "dest": "package.json"
                    }
                }
            ]
        },
        "build": {
            "require": ["ts"],
            "jobs":[
                {
                    "name": "vfs-mkdir",
                    "data": ["build","build/debug","build/release"]
                },
                {
                    "name": "ts-antos-sdk",
                    "data": {
                        "version": "2.0.x"
                    }
                },
                {
                    "name": "ts-compile",
                    "data": {
                        "src": ["ts/main.ts", "ts/app.ts"],
                        "dest": "build/debug/main.js"
                    }
                }
            ]
        },
        "uglify": {
            "require": ["terser"],
            "jobs": [
                {
                    "name":"terser-uglify",
                    "data": ["build/debug/main.js"]
                }
            ]
        },
        "copy": {
            "jobs": [
                {
                    "name": "vfs-cp",
                    "data": {
                        "src": [
                            "core",
                            "package.json",
                            "README.md",
                            "main.css",
                            "scheme.html"
                        ],
                        "dest":"build/debug"
                    }
                }
            ]
        },
        "debug": {
            "depend": ["build","copy"],
            "jobs": []
        },
        "release": {
            "depend": ["build","uglify", "copy"],
            "require": ["zip"],
            "jobs": [
                {
                    "name": "zip-mk",
                    "data": {
                        "src":"build/debug",
                        "dest":"build/release/libantosdk.zip"
                    }
                }
            ]
        },
        "list": {
            "require": ["linux"],
            "jobs": [
                {
                    "name": "linux-exec",
                    "data": {
                        "cmd": "tree .",
                        "pwd": "home://workspace/antosdk-apps/libantosdk"
                    }
                }
            ]
        }
    }
}