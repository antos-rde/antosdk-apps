{
    "name": "Blogger",
    "targets": {
        "init": {
            "jobs": [
                {
                    "name": "vfs-mkdir",
                    "data": [
                        "build",
                        "build/debug",
                        "build/release"
                    ]
                }
            ]
        },
        "coffee": {
            "require": [
                "coffee"
            ],
            "jobs": [
                {
                    "name": "coffee-compile",
                    "data": {
                        "src": [
                            "main.coffee",
                            "dialogs.coffee",
                            "tags.coffee"
                        ],
                        "dest": "build/debug/main.js"
                    }
                }
            ]
        },
        "uglify": {
            "require": [
                "terser"
            ],
            "jobs": [
                {
                    "name": "terser-uglify",
                    "data": [
                        "build/debug/main.js"
                    ]
                }
            ]
        },
        "copy": {
            "jobs": [
                {
                    "name": "vfs-cp",
                    "data": {
                        "src": [
                            "scheme.html",
                            "cvsection.html",
                            "api/sendmail.lua",
                            "sendmail.html",
                            "package.json",
                            "README.md",
                            "main.css"
                        ],
                        "dest": "build/debug"
                    }
                }
            ]
        },
        "release": {
            "require": [
                "zip"
            ],
            "depend": [
                "init",
                "coffee",
                "uglify",
                "copy"
            ],
            "jobs": [
                {
                    "name": "zip-mk",
                    "data": {
                        "src": "build/debug",
                        "dest": "build/release/Blogger.zip"
                    }
                }
            ]
        }
    }
}