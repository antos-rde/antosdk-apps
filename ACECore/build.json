{
    "name": "ACECore",
    "targets":{
        "clean": {
            "jobs": [
                {
                    "name": "vfs-rm",
                    "data": ["build/debug","build/release"]
                }
            ]
        },
        "build": {
            "require": ["ts"],
            "jobs":[
                {
                    "name": "vfs-mkdir",
                    "data": ["build","build/debug","build/release"]
                },
                {
                    "name": "ts-antos-sdk",
                    "data": {
                        "version": "2.0.x"
                    }
                },
                {
                    "name": "ts-compile",
                    "data": {
                        "src": ["path.ts"],
                        "dest": "build/debug/path.js"
                    }
                }
            ]
        },
        "copy": {
            "jobs": [
                {
                    "name": "vfs-cp",
                    "data": {
                        "src": [
                            "core",
                            "package.json",
                            "README.md"
                        ],
                        "dest":"build/debug"
                    }
                }
            ]
        },
        "release": {
            "depend": ["clean","build", "copy"],
            "require": ["zip"],
            "jobs": [
                {
                    "name": "zip-mk",
                    "data": {
                        "src":"build/debug",
                        "dest":"build/release/ACECore.zip"
                    }
                }
            ]
        }
    }
}